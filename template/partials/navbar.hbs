        { name: "Mocha Cookie Crumble Frappuccino" },
        { name: "Iced Mocha Cookie Crumble" },
        { name: "Strawberry Acai Lemonade Refresher" },
        { name: "Hazelnut Triangle" },
        { name: "Bhuna Chicken Puff" },
        { name: "Chocolate Brownie" },
        { name: "Three Dip Nachos" }
    ];
    const cartshow = document.getElementById("cartshow");
    const carticon = document.querySelector(".buy");
    const itemall = document.querySelectorAll(".item");
    const search_result = document.querySelector('.search_result');
    const searchbar = document.getElementById("searchbar");
    const searchquery = document.getElementById("searchquery");
    const cartvalue = document.getElementById("cartvalue");
    const cartbox = document.querySelector('.cart-box ');
    const navbara = document.querySelectorAll(".menu a");



    function updateDisplayedItems(query) {
        searchquery.innerHTML = ""; // Clear previous results
        let match = false;

        for (let i = 0; i < items.length; i++) {
            if (items[i].name.toLowerCase().includes(query.toLowerCase())) {
                const li = document.createElement("li");
                li.textContent = items[i].name;
                searchquery.appendChild(li);
                match = true;
            }
            if (!searchbar.value) {
                searchquery.innerHTML = ""; // Clear previous results

            }
            /* 
            if (!match) {
                const li = document.createElement("li");
                li.textContent = "Search Not Found";
                searchquery.innerHTML = li.textContent
                match = false
            } */
        }
    }
    searchbar.addEventListener("input", () => {
        let userquery = searchbar.value.trim();
        search_result.style.display = "block";

        updateDisplayedItems(userquery);
    });
    searchbar.addEventListener("blur", () => {
        search_result.style.display = "none";

    });
    document.addEventListener("scroll", () => {
        cartshow.style.display = "none";

    })
    window.addEventListener("load", () => {
        const preloader = document.querySelector('.preloader');
        preloader.style.display = "grid";
        setTimeout(() => {
            preloader.style.display = "none";
        }, 500)
    })
    let cartbox_item = document.querySelectorAll('.cart-box .item');

    cartvalue.innerText = cartbox_item.length;

    navbara.forEach((link) => {
        link.addEventListener("click", (e) => {
            function updateCartValue(value) {
                cartvalue.innerText = value;
                e.preventDefault();
            }
        });
    });
    function inget() {
        itemall.forEach((val) => {
            const deletbtn = val.querySelector(".bi-trash");

            deletbtn.addEventListener("click", () => {
                val.remove();
                let cartbox_item = document.querySelectorAll('.cart-box .item');
                let get = cartbox_item.length;
                cartvalue.innerText = get;
                updateCartValue(get);
            })
        })
    }
    inget();
    carticon.addEventListener("click", () => {
        if (cartshow.style.display === "block") {
            cartshow.style.display = "none";
        } else {
            cartshow.style.display = "block";
        }
    })

